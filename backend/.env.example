# ================================================================
# ENVIRONMENT VARIABLES - FOODIES BACKEND
# ================================================================

# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Database Configuration
DATABASE_URL="postgresql://foodies_user:foodies_secure_password_2025@localhost:5432/foodies_prototype"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# Redis Configuration (for sessions)
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# Email Configuration (Nodemailer)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
FROM_EMAIL="noreply@foodies.com"

# Cloudinary Configuration (for file uploads)
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL="info"
LOG_FILE="logs/app.log"

# Socket.io Configuration
SOCKET_CORS_ORIGIN="http://localhost:3000,http://localhost:3001,exp://localhost:19000"

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp"

# Development Configuration
DEBUG=foodies:*
